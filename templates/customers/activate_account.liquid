<div id="activate-customer" class="box-form">
   <h2 class="pg-title">{{ 'customer.activate_account.title' |t }}</h2>
   <p class="note">{{ 'customer.activate_account.subtext' | t }}</p>

   {% form 'activate_customer_password' %}
      {% if form.errors %}          
         <div class="feedback errors">
            {{ form.errors | default_errors }}
         </div>
      {% endif %}    

      <p>
         <label for="password">{{ 'customer.activate_account.password' | t }}</label>
         <input type="password" value="" name="customer[password]" id="customer_password" />
      </p>

      <p>
         <label for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
         <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" />         
      </p>

      <p class="form-action">
         <input class="button" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
         <input type="submit" class="button secondary" name="decline" id="customer_decline" value="{{ 'customer.activate_account.cancel' | t }}" />
      </p>        
   {% endform %}
</div>  