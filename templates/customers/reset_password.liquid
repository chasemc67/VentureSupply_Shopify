<div id="customer-area">
  <div id="pwd-reset" class="small-form">
    <h2>{{ 'customer.reset_password.title' | t }}</h2>

    <p class="note">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <p>
        <label for="password">{{ 'customer.reset_password.password' | t }}</label>
        <input class="input-text" type="password" value="" name="customer[password]" id="customer_password" />
      </p>

      <p>
        <label for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input class="input-text" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" />
      </p>

      <p class="form-action">
        <input class="button" type="submit" value="{{ 'customer.reset_password.submit' | t }}" />
      </p>
    {% endform %}
  </div>
</div>